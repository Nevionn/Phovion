datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Album {
  id     Int     @id @default(autoincrement())
  name   String
  description String?
  order     Int      @default(0)
  photos Photo[] 
}

model Photo {
  id        Int      @id @default(autoincrement())
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId   Int
  path      String
  order    Int
  createdAt DateTime @default(now())
}
